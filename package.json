{
  "name": "legalnomicon",
  "version": "1.1.0",
  "description": "AI-powered legal assistant platform with enhanced features",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "setup": "node scripts/setup.js",
    "build": "echo 'No build step required'",
    "test": "jest --runInBand --detectOpenHandles --forceExit",
    "test:watch": "jest --watch --runInBand --detectOpenHandles",
    "test:coverage": "jest --coverage --runInBand --detectOpenHandles"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "handlebars": "^4.7.8",
    "helmet": "^7.2.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mammoth": "^1.9.1",
    "marked": "^15.0.12",
    "mongoose": "^7.6.3",
    "multer": "^2.0.0",
    "openai": "^5.0.1",
    "pdf-parse": "^1.1.1",
    "redis": "^4.6.13",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^5.2.2",
    "cheerio": "^1.1.0",
    "diff": "^8.0.2",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.5.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "legal",
    "ai",
    "assistant",
    "contract-review",
    "legal-research"
  ],
  "author": "Your Name",
  "license": "MIT"
}
