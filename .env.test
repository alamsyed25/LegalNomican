# LegalNomican Test Environment Configuration

# Server Configuration
PORT=3001
NODE_ENV=test

# Database Configuration
# Test database URI should include 'test' to avoid corrupting production data
MONGODB_URI=mongodb://localhost:27017/legalnomican_test

# Redis Configuration
REDIS_URL=redis://localhost:6379/1

# API Keys
# For testing, we can use placeholder values
OPENAI_API_KEY=test_api_key

# Security
JWT_SECRET=test_jwt_secret
JWT_EXPIRY=1d

# Logging
LOG_LEVEL=debug
